# Vanna Text2SQL 配置文件

# ============ LLM 配置 ============
# 选择 LLM 提供商: openai, dashscope (通义千问), ollama
LLM_PROVIDER=dashscope

# OpenAI 配置
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o-mini

# 通义千问配置 (推荐)
DASHSCOPE_API_KEY=sk-xxx
DASHSCOPE_MODEL=qwen-turbo

# Ollama 本地模型配置
OLLAMA_MODEL=deepseek-r1:7b

# ============ 数据库配置 ============
# 数据库类型: sqlite, mysql
DB_TYPE=sqlite

# SQLite 数据库路径
SQLITE_DB_PATH=./data/heros.db

# MySQL 配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=text2sql

# ============ Vanna 配置 ============
# 向量存储类型: chromadb, qdrant
VANNA_VECTOR_STORE=chromadb

# ChromaDB 持久化路径
CHROMA_PERSIST_DIR=./data/chroma

# ============ 训练配置 ============
# 是否自动训练表结构
AUTO_TRAIN_SCHEMA=true
# 是否使用示例数据进行训练
USE_EXAMPLE_DATA=true
